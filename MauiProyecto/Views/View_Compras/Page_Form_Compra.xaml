<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APP_MAUI_Apl_Dis_2025_II.Views.View_Compras.Page_Form_Compra"
             xmlns:components="clr-namespace:APP_MAUI_Apl_Dis_2025_II.Views.Components"
             Title="Formulario de Compra">
    
    <components:Background_Image>
        <ScrollView>
            <VerticalStackLayout Spacing="15" Padding="10">
                <components:Encabezado/>

                <Border BackgroundColor="#D9D9D9"
                        Padding="15"
                        StrokeShape="RoundRectangle 15"
                        Stroke="#000000"
                        StrokeThickness="1">

                    <VerticalStackLayout Spacing="15">
                        <Label x:Name="lblTitulo"
                               Text="NUEVA ORDEN DE COMPRA"
                               FontSize="22"
                               FontAttributes="Bold"
                               TextColor="Black"
                               HorizontalOptions="Center"/>

                        <Label x:Name="lblError"
                               Text=""
                               FontSize="14"
                               TextColor="Red"
                               HorizontalOptions="Center"
                               IsVisible="False"/>

                        <!-- Proveedor -->
                        <components:Input_Text
                            x:Name="txtProveedor"
                            Placeholder="Proveedor *"/>

                        <!-- Fecha de Compra -->
                        <Border Background="White"
                                StrokeShape="RoundRectangle 15"
                                HeightRequest="60">
                            <HorizontalStackLayout Padding="10" VerticalOptions="Center">
                                <Label Text="Fecha de Compra: "
                                       FontSize="16"
                                       TextColor="Gray"
                                       VerticalOptions="Center"/>
                                <DatePicker x:Name="dateFechaCompra"
                                            FontSize="16"
                                            TextColor="Black"
                                            HorizontalOptions="Fill"/>
                            </HorizontalStackLayout>
                        </Border>

                        <!-- Estado -->
                        <Border Background="White"
                                StrokeShape="RoundRectangle 15"
                                HeightRequest="80">
                            <HorizontalStackLayout Padding="10" VerticalOptions="Center">
                                <Picker x:Name="pickerEstado"
                                        FontSize="16"
                                        TextColor="Black"
                                        HorizontalOptions="Fill">
                                    <Picker.Items>
                                        <x:String>Pendiente</x:String>
                                        <x:String>Recibida</x:String>
                                        <x:String>Cancelada</x:String>
                                    </Picker.Items>
                                </Picker>
                            </HorizontalStackLayout>
                        </Border>

                        <!-- Observaciones -->
                        <Border Background="White"
                                StrokeShape="RoundRectangle 15"
                                MinimumHeightRequest="100">
                            <Editor x:Name="txtObservaciones"
                                    Placeholder="Observaciones"
                                    FontSize="16"
                                    TextColor="Black"
                                    AutoSize="TextChanges"
                                    MaxLength="500"
                                    Margin="10"/>
                        </Border>

                        <!-- Total (calculado automáticamente) -->
                        <Border BackgroundColor="White"
                                Padding="15"
                                StrokeShape="RoundRectangle 10"
                                Stroke="#28a745"
                                StrokeThickness="2">
                            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                                <Label Text="TOTAL:"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       TextColor="Black"
                                       VerticalOptions="Center"/>
                                <Label x:Name="lblTotal"
                                       Text="S/. 0.00"
                                       FontSize="24"
                                       FontAttributes="Bold"
                                       TextColor="#28a745"
                                       VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                        </Border>

                        <!-- Detalles de la compra -->
                        <Label Text="INSUMOS A COMPRAR"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="Black"
                               Margin="0,10,0,0"/>

                        <Button Text="+ Agregar Insumo"
                                BackgroundColor="#007bff"
                                TextColor="White"
                                CornerRadius="10"
                                Clicked="Agregar_Insumo_Clicked"/>

                        <CollectionView x:Name="collectionDetalles"
                                        SelectionMode="None"
                                        EmptyView="No se han agregado insumos a la compra">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border BackgroundColor="White"
                                            Padding="10"
                                            Margin="0,0,0,10"
                                            StrokeShape="RoundRectangle 10"
                                            Stroke="#dee2e6"
                                            StrokeThickness="1">
                                        <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                                            
                                            <!-- Nombre del insumo -->
                                            <Label Grid.Row="0" Grid.Column="0"
                                                   Text="{Binding Nombre_Insumo}"
                                                   FontSize="16"
                                                   FontAttributes="Bold"
                                                   TextColor="Black"/>

                                            <!-- Botón eliminar -->
                                            <Button Grid.Row="0" Grid.RowSpan="3" Grid.Column="1"
                                                    Text="✖"
                                                    BackgroundColor="#dc3545"
                                                    TextColor="White"
                                                    WidthRequest="40"
                                                    HeightRequest="40"
                                                    CornerRadius="20"
                                                    FontSize="16"
                                                    Clicked="Quitar_Detalle_Clicked"
                                                    CommandParameter="{Binding}"/>

                                            <!-- Cantidad y unidad -->
                                            <Label Grid.Row="1" Grid.Column="0"
                                                   Text="{Binding Cantidad_Display}"
                                                   FontSize="14"
                                                   TextColor="#495057"/>

                                            <!-- Subtotal -->
                                            <Label Grid.Row="2" Grid.Column="0"
                                                   Text="{Binding Subtotal_Display}"
                                                   FontSize="16"
                                                   FontAttributes="Bold"
                                                   TextColor="#28a745"
                                                   Margin="0,5,0,0"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                        <!-- Botones -->
                        <Grid ColumnDefinitions="*,*" ColumnSpacing="10" Margin="0,10,0,0">
                            <Button Grid.Column="0"
                                    Text="Cancelar"
                                    BackgroundColor="#6c757d"
                                    TextColor="White"
                                    CornerRadius="10"
                                    Clicked="Cancelar_Clicked"/>

                            <Button Grid.Column="1"
                                    x:Name="btnGuardar"
                                    Text="Guardar"
                                    BackgroundColor="#28a745"
                                    TextColor="White"
                                    CornerRadius="10"
                                    Clicked="Guardar_Clicked"/>
                        </Grid>
                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>
        </ScrollView>
    </components:Background_Image>
</ContentPage>
