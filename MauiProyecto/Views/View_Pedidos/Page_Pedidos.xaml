<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:APP_MAUI_Apl_Dis_2025_II.Views.View_Pedidos"
             xmlns:components="clr-namespace:APP_MAUI_Apl_Dis_2025_II.Views.Components"
             xmlns:models="clr-namespace:WCF_Apl_Dis"
             x:Class="APP_MAUI_Apl_Dis_2025_II.Views.View_Pedidos.Page_Pedidos">

    <ContentPage.Resources>
        <ResourceDictionary>
            <local:EstadoColorConverter x:Key="EstadoColorConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <components:Background_Image>
        <ScrollView>
            <VerticalStackLayout Spacing="15" Padding="0">

                <components:Encabezado/>
                <VerticalStackLayout Spacing="15" Padding="10">
                    <!-- Título -->
                    <Label Text="Pedidos"
                        FontSize="24"
                        FontAttributes="Bold"
                        HorizontalOptions="Center"
                        TextColor="Black" />
    
                    <!-- Botón Agregar Pedido -->
                    <Border BackgroundColor="White" 
                        StrokeThickness="0" 
                        Padding="5" 
                        StrokeShape="RoundRectangle 15">
                        <Button Text="Agregar pedido"
                            FontSize="18"
                            TextColor="Black"
                            CornerRadius="10"
                            BackgroundColor="#E0E0E0"
                            Clicked="AgregarPedido_Clicked"/>
                    </Border>

                    <!-- Tabla de Pedidos -->
                    <Border BackgroundColor="White" 
                        StrokeThickness="0" 
                        Padding="10" 
                        StrokeShape="RoundRectangle 12">

                        <VerticalStackLayout 
                            Spacing="10">

                            <!-- Encabezado -->
                            <Grid ColumnSpacing="10"
                                RowDefinitions="45"
                                ColumnDefinitions="*,1.2*,*">
                            
                                <Label Text="Cliente"
                                    TextColor="Black"
                                    FontAttributes="Bold"
                                    VerticalOptions="Center"/>
                                <Label Text="Hora"
                                    TextColor="Black"
                                    Grid.Column="1"
                                    FontAttributes="Bold"
                                    VerticalOptions="Center"/>
                                <Label Text="Estado"
                                    TextColor="Black"
                                    Grid.Column="2"
                                    FontAttributes="Bold"
                                    VerticalOptions="Center"/>
                            </Grid>

                            <BoxView HeightRequest="1" Color="#E0E0E0"/>

                            <!-- CollectionView -->
                            <CollectionView 
                                x:Name="TablaPedidos"
                                SelectionMode="Single"
                                SelectionChanged="TablaPedidos_SelectionChanged">

                                <CollectionView.ItemTemplate>
                                    <DataTemplate x:DataType="models:Cls_Ventas">
                                        <Grid ColumnSpacing="10"
                                            RowDefinitions="45"
                                            ColumnDefinitions="*,1.2*,*"
                                            Padding="5"
                                            BackgroundColor="White">

                                            <Label 
                                                Text="{Binding txt_Cliente}"
                                                TextColor="Black"/>

                                            <Label 
                                                TextColor="Black"
                                                Text="{Binding Fecha_Pedido, StringFormat='{0:dd MMM HH:mm}'}"
                                                Grid.Column="1" />

                                            <Border Grid.Column="2"
                                                Padding="5"
                                                StrokeThickness="0"
                                                StrokeShape="RoundRectangle 12"
                                                BackgroundColor="{Binding Estado, Converter={StaticResource EstadoColorConverter}}">
                                                <Label 
                                                    Text="{Binding Estado}" 
                                                    TextColor="White"
                                                    HorizontalOptions="Center"
                                                    VerticalOptions="Center"/>
                                            </Border>

                                        </Grid>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>

                            </CollectionView>

                        </VerticalStackLayout>
                    </Border>

                    <!-- Detalle del Pedido -->
                    <Border 
                        BackgroundColor="White" 
                        StrokeThickness="0" 
                        Padding="15" 
                        StrokeShape="RoundRectangle 20">

                        <VerticalStackLayout 
                            Spacing="10">
                            <Label 
                                x:Name="lblMensage" 
                                Text="" 
                                FontAttributes="Bold" 
                                FontSize="14"
                                IsVisible="False"
                                HorizontalOptions="Center"/>
                            
                            <Label 
                                x:Name="lblCliente" 
                                Text="Cliente:" 
                                TextColor="Black"
                                FontAttributes="Bold" 
                                FontSize="18"/>
                            
                            <Label 
                                x:Name="lblHora" 
                                Text="Fecha:" 
                                TextColor="Black"
                                FontAttributes="Bold" 
                                FontSize="18"/>

                            <Label 
                                x:Name="lblEstado" 
                                Text="Estado:" 
                                TextColor="Black"
                                FontAttributes="Bold" 
                                FontSize="18"/>     

                            <Label 
                                x:Name="lblPedido" 
                                Text="Pedido:" 
                                TextColor="Black"
                                FontAttributes="Bold" 
                                FontSize="18"/>
                        </VerticalStackLayout>

                    </Border>

                    <Button 
                        x:Name="btn_Estado"
                        TextColor="Black"
                        HorizontalOptions="Fill"
                        BackgroundColor="#F4C542"
                        CornerRadius="10"
                        Clicked="Actualizar_Estado"
                        IsVisible="False"/>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>
    </components:Background_Image>
    
</ContentPage>