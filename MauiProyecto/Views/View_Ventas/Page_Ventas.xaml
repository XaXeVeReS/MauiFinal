<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APP_MAUI_Apl_Dis_2025_II.Views.View_Ventas.Page_Ventas"
             xmlns:components="clr-namespace:APP_MAUI_Apl_Dis_2025_II.Views.Components"
             xmlns:models="clr-namespace:WCF_Apl_Dis">

    <components:Background_Image>
        <ScrollView>
            <VerticalStackLayout Spacing="15" Padding="0">

                <components:Encabezado/>
                <VerticalStackLayout Spacing="15" Padding="10">
                    <!-- TÃ­tulo -->
                    <Label 
                        Text="Ventas"
                        FontSize="24"
                        FontAttributes="Bold"
                        HorizontalOptions="Center"
                        TextColor="Black" />

                    <Grid 
                        ColumnDefinitions="*, *" 
                        Padding="0"
                        HeightRequest="80"
                        ColumnSpacing="20">

                        <components:Input_Date 
                            x:Name = "InputFecha"
                            Placeholder="Fecha"
                            SelectedDateChanged="InputFecha_SelectedDateChanged"/>

                        <Border
                            Grid.Column="1"
                            Background="White"
                            StrokeShape="RoundRectangle 15"
                            HeightRequest="80"
                            HorizontalOptions="Fill">

                            <HorizontalStackLayout 
                                Padding="6"
                                VerticalOptions="Center">
                                <Picker
                                    x:Name="picker_Estado"
                                    Title="Seleccionar Estado"
                                    FontSize="16"
                                    TextColor="Black"
                                    HorizontalOptions="Fill"
                                    SelectedIndexChanged="picker_Estado_SelectedIndexChanged">

                                    <Picker.Items>
                                        <x:String>Pendiente</x:String>
                                        <x:String>Procesando</x:String>
                                        <x:String>Entregado</x:String>
                                        <x:String>Cancelado</x:String>
                                    </Picker.Items>

                                </Picker>
                            </HorizontalStackLayout>
                        </Border>
                    </Grid>
                    <!-- Tabla de Pedidos -->
                    <Border BackgroundColor="White" 
                     StrokeThickness="0" 
                     Padding="10" 
                     StrokeShape="RoundRectangle 12">

                        <VerticalStackLayout 
                            Spacing="10">

                            <!-- Encabezado -->
                            <Grid ColumnSpacing="10"
                                RowDefinitions="45"
                                ColumnDefinitions="*,*,*,*,*">

                                <Label Text="Cliente"
                                    TextColor="Black"
                                    FontAttributes="Bold"
                                    VerticalOptions="Center"/>
                                
                                <Label Text="Estado"
                                    TextColor="Black"
                                    Grid.Column="1"
                                    FontAttributes="Bold"
                                    VerticalOptions="Center"/>

                                <Label Text="Fecha"
                                    TextColor="Black"
                                    Grid.Column="2"
                                    FontAttributes="Bold"
                                    VerticalOptions="Center"/>
                                
                                <Label Text="Costo"
                                    TextColor="Black"
                                    Grid.Column="3"
                                    FontAttributes="Bold"
                                    VerticalOptions="Center"/>
                                
                                <Label Text="Detalle"
                                    TextColor="Black"
                                    Grid.Column="4"
                                    FontAttributes="Bold"
                                    VerticalOptions="Center"/>
                            </Grid>

                            <BoxView HeightRequest="1" Color="#E0E0E0"/>

                            <!-- CollectionView -->
                            <CollectionView 
                                x:Name="TablaPedidos"
                                ItemsSource="{Binding ListaPedidos}"
                                Scrolled="TablaPedidos_Scrolled"
                                SelectionMode="Single"
                                HeightRequest="430">

                                <CollectionView.ItemTemplate>
                                    <DataTemplate x:DataType="models:Cls_Ventas">
                                        <Grid ColumnSpacing="10"
                                            RowDefinitions="45"
                                            ColumnDefinitions="*,*,*,*,*"
                                            Padding="5"
                                            BackgroundColor="White">

                                            <Label 
                                                Text="{Binding txt_Cliente}"
                                                TextColor="Black"/>

                                            <Label 
                                                Grid.Column="1"
                                                Text="{Binding Estado}" 
                                                TextColor="Black"/>

                                            <Label 
                                                TextColor="Black"
                                                Text="{Binding Fecha_Pedido, StringFormat='{0:dd MMM HH:mm}'}"
                                                Grid.Column="2" />

                                            <Label 
                                                Grid.Column="3"
                                                Text="{Binding Costo_Total}" 
                                                TextColor="Black"/>
                                            
                                            <ImageButton 
                                                Source="editar.png"
                                                Grid.Column="4"
                                                Clicked="ModtrarDetalle_Clicked"/>
                                        </Grid>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>

                            </CollectionView>

                        </VerticalStackLayout>
                    </Border>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>
    </components:Background_Image>
</ContentPage>