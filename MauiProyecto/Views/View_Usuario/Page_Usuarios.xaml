<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APP_MAUI_Apl_Dis_2025_II.Views.View_Usuario.Page_Usuarios"
             xmlns:components="clr-namespace:APP_MAUI_Apl_Dis_2025_II.Views.Components"
             xmlns:models="clr-namespace:WCF_Apl_Dis">

    <components:Background_Image>
        <ScrollView>
            <VerticalStackLayout Spacing="15" Padding="0">
            
                <components:Encabezado/>
                <VerticalStackLayout Spacing="15" Padding="10">
                    <HorizontalStackLayout>
                        <!-- TITULO -->
                        <Label Grid.Row="0" Grid.Column="0"
                            Text="Usuarios"
                            FontSize="35"
                            FontAttributes="Bold"
                            TextColor="Black" 
                            HorizontalOptions="Start"/>

                        <!-- BOTON + -->
                        <ImageButton 
                            Grid.Row="0"           
                            Grid.Column="1"
                            Source="agregar.png"
                            WidthRequest="60"
                            HeightRequest="60"
                            BackgroundColor="Transparent"
                            Clicked="btn_Agregar_Usuario" 
                            HorizontalOptions="End"/>
                    </HorizontalStackLayout>

                    <!-- Tabla de Usuarios -->
                    <Border BackgroundColor="White" 
                            StrokeThickness="0" 
                            Padding="10" 
                            StrokeShape="RoundRectangle 12">

                        <VerticalStackLayout 
                            Spacing="10">

                            <!-- Encabezado -->
                            <Grid ColumnSpacing="10"
                                RowDefinitions="45"
                                ColumnDefinitions="*,1.2*,*,*">

                                <Label Text="Usuario"
                                    TextColor="Black"
                                    FontAttributes="Bold"
                                    VerticalOptions="Center"/>

                                <Label Text="Rol"
                                    TextColor="Black"
                                    Grid.Column="1"
                                    FontAttributes="Bold"
                                    VerticalOptions="Center"/>

                                <Label Text="Activo"
                                    TextColor="Black"
                                    Grid.Column="2"
                                    FontAttributes="Bold"
                                    VerticalOptions="Center"/>

                                <Label Text="Editar"
                                    TextColor="Black"
                                    Grid.Column="3"
                                    FontAttributes="Bold"
                                    VerticalOptions="Center"/>
                            </Grid>

                            <BoxView HeightRequest="1" Color="#E0E0E0"/>

                            <!-- CollectionView -->
                            <CollectionView 
                                x:Name="TablaUsuarios"
                                SelectionMode="Single">

                                <CollectionView.ItemTemplate>
                                    <DataTemplate x:DataType="models:Cls_Usuarios">
                                        <Grid ColumnSpacing="10"
                                            RowDefinitions="45"
                                            ColumnDefinitions="*,1.2*,*,*"
                                            Padding="5"
                                            BackgroundColor="White">

                                            <Label 
                                                Text="{Binding Nombre}"
                                                TextColor="Black"/>

                                            <Label 
                                                TextColor="Black"
                                                Text="{Binding Rol}"
                                                Grid.Column="1" />

                                            <Label 
                                                TextColor="Black"
                                                Text="{Binding Activo}"
                                                Grid.Column="2" />

                                            <ImageButton 
                                                Source="editar.png"
                                                Grid.Column="3"
                                                Clicked="btnEditarUsuario_Clicked"/>
                                        </Grid>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>

                            </CollectionView>

                        </VerticalStackLayout>
                    </Border>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>
    </components:Background_Image>
</ContentPage>