<?xml version="1.0" encoding="utf-8" ?>
<Grid xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
      x:Class="APP_MAUI_Apl_Dis_2025_II.Views.Components.Encabezado"
      Padding="10,3,10,3"
      BackgroundColor="#6E6E6E"
      ColumnDefinitions="Auto,*,Auto"
      HeightRequest="50">

    <!-- BOTÓN DEL MENÚ (logo) -->
    <ImageButton Grid.Column="0"
                 Source="sol_naranja.png"
                 WidthRequest="20"
                 HeightRequest="20"
                 BackgroundColor="Transparent"
                 VerticalOptions="Center"
                 HorizontalOptions="Start"
                 Clicked="MenuButton_Clicked"/>

    <!-- TÍTULO CENTRADO -->
    <Label Grid.Column="1"
           Text="LA MAMACHA"
           FontSize="20"
           FontAttributes="Bold"
           HorizontalOptions="Center"
           VerticalOptions="Center"
           TextColor="White" />

    <!-- BOTÓN ALERTAS / NOTIFICACIONES -->
    <ImageButton x:Name="btnCampana"
                 Grid.Column="2"
                 Source="campana.png"
                 WidthRequest="12"
                 HeightRequest="12"
                 Aspect="AspectFit"
                 BackgroundColor="Transparent"
                 VerticalOptions="Center"
                 HorizontalOptions="End"
                 Clicked="Notificaciones_Clicked"/>

</Grid>
