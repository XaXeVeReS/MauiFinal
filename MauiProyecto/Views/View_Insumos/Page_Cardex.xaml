<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APP_MAUI_Apl_Dis_2025_II.Views.View_Insumos.Page_Cardex"
             xmlns:components="clr-namespace:APP_MAUI_Apl_Dis_2025_II.Views.Components"
             Title="Cardex de Insumo">
    
    <components:Background_Image>
        <ScrollView>
            <VerticalStackLayout Spacing="15" Padding="10">
                <components:Encabezado/>

                <Border BackgroundColor="#D9D9D9"
                        Padding="15"
                        StrokeShape="RoundRectangle 15"
                        Stroke="#000000"
                        StrokeThickness="1">

                    <VerticalStackLayout Spacing="15">
                        <Label x:Name="lblTitulo"
                               Text="HISTORIAL DE MOVIMIENTOS"
                               FontSize="22"
                               FontAttributes="Bold"
                               TextColor="Black"
                               HorizontalOptions="Center"/>

                        <!-- Información del Insumo -->
                        <Border BackgroundColor="White"
                                Padding="10"
                                StrokeShape="RoundRectangle 10">
                            <VerticalStackLayout Spacing="5">
                                <Label x:Name="lblNombreInsumo"
                                       Text="Insumo: ---"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="Black"/>
                                <Label x:Name="lblStockActual"
                                       Text="Stock Actual: --- ---"
                                       FontSize="16"
                                       TextColor="#495057"/>
                                <Label x:Name="lblStockMinimo"
                                       Text="Stock Mínimo: --- ---"
                                       FontSize="14"
                                       TextColor="#6c757d"/>
                            </VerticalStackLayout>
                        </Border>

                        <!-- Filtros -->
                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                            <Border Grid.Column="0"
                                    Background="White"
                                    StrokeShape="RoundRectangle 15"
                                    HeightRequest="50">
                                <Picker x:Name="pickerTipoMovimiento"
                                        Title="Tipo de Movimiento"
                                        FontSize="14"
                                        TextColor="Black"
                                        HorizontalOptions="Fill"
                                        SelectedIndexChanged="OnFiltroChanged">
                                    <Picker.Items>
                                        <x:String>Todos</x:String>
                                        <x:String>Entrada</x:String>
                                        <x:String>Salida</x:String>
                                    </Picker.Items>
                                </Picker>
                            </Border>

                            <Button Grid.Column="1"
                                    Text="↻"
                                    FontSize="24"
                                    WidthRequest="50"
                                    HeightRequest="50"
                                    CornerRadius="25"
                                    BackgroundColor="#007bff"
                                    TextColor="White"
                                    Clicked="Actualizar_Clicked"/>
                        </Grid>

                        <!-- Lista de Movimientos -->
                        <Label Text="MOVIMIENTOS"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="Black"
                               Margin="0,10,0,0"/>

                        <CollectionView x:Name="collectionMovimientos"
                                        SelectionMode="None"
                                        EmptyView="No hay movimientos registrados">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border BackgroundColor="White"
                                            Padding="12"
                                            Margin="0,0,0,10"
                                            StrokeShape="RoundRectangle 10"
                                            Stroke="#dee2e6"
                                            StrokeThickness="1">
                                        <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="Auto,*">
                                            
                                            <!-- Indicador de tipo -->
                                            <BoxView Grid.Row="0" Grid.RowSpan="4" Grid.Column="0"
                                                     Color="{Binding Color_Tipo}"
                                                     WidthRequest="4"
                                                     Margin="0,0,10,0"/>

                                            <!-- Fecha -->
                                            <Label Grid.Row="0" Grid.Column="1"
                                                   Text="{Binding Fecha_Movimiento_Formatted}"
                                                   FontSize="12"
                                                   TextColor="#6c757d"/>

                                            <!-- Tipo y Cantidad -->
                                            <HorizontalStackLayout Grid.Row="1" Grid.Column="1" Spacing="10">
                                                <Label Text="{Binding Tipo_Movimiento}"
                                                       FontSize="16"
                                                       FontAttributes="Bold"
                                                       TextColor="Black"/>
                                                <Label Text="{Binding Cantidad_Formatted}"
                                                       FontSize="16"
                                                       FontAttributes="Bold"
                                                       TextColor="{Binding Color_Tipo}"/>
                                            </HorizontalStackLayout>

                                            <!-- Motivo -->
                                            <Label Grid.Row="2" Grid.Column="1"
                                                   Text="{Binding Motivo}"
                                                   FontSize="14"
                                                   TextColor="#495057"/>

                                            <!-- Usuario -->
                                            <Label Grid.Row="3" Grid.Column="1"
                                                   Text="{Binding Usuario_Display}"
                                                   FontSize="12"
                                                   TextColor="#6c757d"
                                                   FontAttributes="Italic"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                        <!-- Botón Volver -->
                        <Button Text="Volver"
                                BackgroundColor="#6c757d"
                                TextColor="White"
                                CornerRadius="10"
                                Clicked="Volver_Clicked"
                                Margin="0,10,0,0"/>
                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>
        </ScrollView>
    </components:Background_Image>
</ContentPage>
