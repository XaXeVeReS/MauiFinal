<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APP_MAUI_Apl_Dis_2025_II.Views.View_Insumos.Page_Form_Insumo"
             xmlns:components="clr-namespace:APP_MAUI_Apl_Dis_2025_II.Views.Components"
             Title="Formulario de Insumo">
    
    <components:Background_Image>
        <ScrollView>
            <VerticalStackLayout Spacing="15" Padding="10">
                <components:Encabezado/>

                <Border BackgroundColor="#D9D9D9"
                        Padding="15"
                        StrokeShape="RoundRectangle 15"
                        Stroke="#000000"
                        StrokeThickness="1">

                    <VerticalStackLayout Spacing="15">
                        <Label x:Name="lblTitulo"
                               Text="NUEVO INSUMO"
                               FontSize="22"
                               FontAttributes="Bold"
                               TextColor="Black"
                               HorizontalOptions="Center"/>

                        <Label x:Name="lblError"
                               Text=""
                               FontSize="14"
                               TextColor="Red"
                               HorizontalOptions="Center"
                               IsVisible="False"/>

                        <!-- Nombre del Insumo -->
                        <components:Input_Text
                            x:Name="txtNombre"
                            Placeholder="Nombre del Insumo *"/>

                        <!-- Unidad de Medida -->
                        <Border Background="White"
                                StrokeShape="RoundRectangle 15"
                                HeightRequest="60"
                                HorizontalOptions="Fill">
                            <HorizontalStackLayout Padding="10" VerticalOptions="Center">
                                <Picker x:Name="pickerUnidad"
                                        Title="Unidad de Medida *"
                                        FontSize="16"
                                        TextColor="Black"
                                        HorizontalOptions="Fill">
                                    <Picker.Items>
                                        <x:String>Kg</x:String>
                                        <x:String>g</x:String>
                                        <x:String>L</x:String>
                                        <x:String>ml</x:String>
                                        <x:String>Unidad</x:String>
                                        <x:String>Paquete</x:String>
                                        <x:String>Caja</x:String>
                                    </Picker.Items>
                                </Picker>
                            </HorizontalStackLayout>
                        </Border>

                        <!-- Stock Disponible -->
                        <components:Input_Float
                            x:Name="txtStockDisponible"
                            Placeholder="Stock Disponible *"/>

                        <!-- Stock Mínimo -->
                        <components:Input_Float
                            x:Name="txtStockMinimo"
                            Placeholder="Stock Mínimo *"/>

                        <!-- Información adicional -->
                        <Border BackgroundColor="#e9ecef"
                                Padding="10"
                                StrokeShape="RoundRectangle 10">
                            <Label TextColor="#6c757d" FontSize="12">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="ℹ️ El stock mínimo se usa para generar alertas automáticas cuando el inventario está bajo."
                                              FontSize="12"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </Border>

                        <!-- Botones -->
                        <Grid ColumnDefinitions="*,*" ColumnSpacing="10" Margin="0,10,0,0">
                            <Button Grid.Column="0"
                                    Text="Cancelar"
                                    BackgroundColor="#6c757d"
                                    TextColor="White"
                                    CornerRadius="10"
                                    Clicked="Cancelar_Clicked"/>

                            <Button Grid.Column="1"
                                    x:Name="btnGuardar"
                                    Text="Guardar"
                                    BackgroundColor="#28a745"
                                    TextColor="White"
                                    CornerRadius="10"
                                    Clicked="Guardar_Clicked"/>
                        </Grid>
                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>
        </ScrollView>
    </components:Background_Image>
</ContentPage>
