<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APP_MAUI_Apl_Dis_2025_II.Views.View_Comentarios.Page_Comentarios"
             xmlns:components="clr-namespace:APP_MAUI_Apl_Dis_2025_II.Views.Components"
             Title="Comentarios">
    
    <components:Background_Image>
        <ScrollView>
            <VerticalStackLayout Spacing="15" Padding="10">
                <components:Encabezado/>

                <Border BackgroundColor="#D9D9D9"
                        Padding="15"
                        StrokeShape="RoundRectangle 15"
                        Stroke="#000000"
                        StrokeThickness="1">

                    <VerticalStackLayout Spacing="15">
                        <Label Text="COMENTARIOS Y VALORACIONES"
                               FontSize="22"
                               FontAttributes="Bold"
                               TextColor="Black"
                               HorizontalOptions="Center"/>

                        <!-- Filtros -->
                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                            <Border Grid.Column="0"
                                    Background="White"
                                    StrokeShape="RoundRectangle 15"
                                    HeightRequest="50">
                                <Picker x:Name="pickerFiltro"
                                        Title="Filtrar por"
                                        FontSize="14"
                                        TextColor="Black"
                                        HorizontalOptions="Fill"
                                        SelectedIndexChanged="OnFiltroChanged">
                                    <Picker.Items>
                                        <x:String>Todos</x:String>
                                        <x:String>Platos</x:String>
                                        <x:String>Ventas</x:String>
                                    </Picker.Items>
                                </Picker>
                            </Border>

                            <Button Grid.Column="1"
                                    Text="↻"
                                    FontSize="24"
                                    WidthRequest="50"
                                    HeightRequest="50"
                                    CornerRadius="25"
                                    BackgroundColor="#007bff"
                                    TextColor="White"
                                    Clicked="Actualizar_Clicked"/>
                        </Grid>

                        <!-- Estadísticas -->
                        <Border BackgroundColor="White"
                                Padding="15"
                                StrokeShape="RoundRectangle 10">
                            <Grid ColumnDefinitions="*,*,*" ColumnSpacing="10">
                                <VerticalStackLayout Grid.Column="0" Spacing="5">
                                    <Label Text="Total"
                                           FontSize="12"
                                           TextColor="#6c757d"
                                           HorizontalOptions="Center"/>
                                    <Label x:Name="lblTotalComentarios"
                                           Text="0"
                                           FontSize="24"
                                           FontAttributes="Bold"
                                           TextColor="#007bff"
                                           HorizontalOptions="Center"/>
                                </VerticalStackLayout>

                                <BoxView Grid.Column="1" WidthRequest="1" Color="#dee2e6"/>

                                <VerticalStackLayout Grid.Column="1" Spacing="5">
                                    <Label Text="Promedio"
                                           FontSize="12"
                                           TextColor="#6c757d"
                                           HorizontalOptions="Center"/>
                                    <HorizontalStackLayout Spacing="5" HorizontalOptions="Center">
                                        <Label x:Name="lblPromedioValoracion"
                                               Text="0.0"
                                               FontSize="24"
                                               FontAttributes="Bold"
                                               TextColor="#ffc107"/>
                                        <Label Text="★"
                                               FontSize="24"
                                               TextColor="#ffc107"
                                               VerticalOptions="Center"/>
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>

                                <BoxView Grid.Column="2" WidthRequest="1" Color="#dee2e6"/>

                                <VerticalStackLayout Grid.Column="2" Spacing="5">
                                    <Label Text="Mejor"
                                           FontSize="12"
                                           TextColor="#6c757d"
                                           HorizontalOptions="Center"/>
                                    <Label x:Name="lblMejorValoracion"
                                           Text="5 ★"
                                           FontSize="24"
                                           FontAttributes="Bold"
                                           TextColor="#28a745"
                                           HorizontalOptions="Center"/>
                                </VerticalStackLayout>
                            </Grid>
                        </Border>

                        <!-- Lista de Comentarios -->
                        <CollectionView x:Name="collectionComentarios"
                                        SelectionMode="None"
                                        EmptyView="No hay comentarios registrados">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border BackgroundColor="White"
                                            Padding="12"
                                            Margin="0,0,0,10"
                                            StrokeShape="RoundRectangle 10"
                                            Stroke="#dee2e6"
                                            StrokeThickness="1">
                                        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                                            
                                            <!-- Valoración y Tipo -->
                                            <HorizontalStackLayout Grid.Row="0" Grid.Column="0" Spacing="10">
                                                <Border BackgroundColor="{Binding Color_Valoracion}"
                                                        Padding="8,4"
                                                        StrokeShape="RoundRectangle 8">
                                                    <HorizontalStackLayout Spacing="4">
                                                        <Label Text="{Binding Valoracion}"
                                                               FontSize="14"
                                                               TextColor="White"
                                                               FontAttributes="Bold"/>
                                                        <Label Text="★"
                                                               FontSize="14"
                                                               TextColor="White"/>
                                                    </HorizontalStackLayout>
                                                </Border>

                                                <Border BackgroundColor="#e9ecef"
                                                        Padding="6,2"
                                                        StrokeShape="RoundRectangle 6">
                                                    <Label Text="{Binding Tipo_Contexto}"
                                                           FontSize="11"
                                                           TextColor="#495057"
                                                           FontAttributes="Italic"/>
                                                </Border>
                                            </HorizontalStackLayout>

                                            <!-- Fecha -->
                                            <Label Grid.Row="0" Grid.Column="1"
                                                   Text="{Binding Fecha_Formatted}"
                                                   FontSize="12"
                                                   TextColor="#6c757d"
                                                   HorizontalOptions="End"/>

                                            <!-- Contexto (Plato o Venta) -->
                                            <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                                   Text="{Binding Contexto_Display}"
                                                   FontSize="14"
                                                   FontAttributes="Bold"
                                                   TextColor="#495057"
                                                   Margin="0,5,0,0"/>

                                            <!-- Comentario -->
                                            <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                                    BackgroundColor="#f8f9fa"
                                                    Padding="10"
                                                    StrokeShape="RoundRectangle 8"
                                                    Margin="0,8,0,0">
                                                <Label Text="{Binding Comentario}"
                                                       FontSize="14"
                                                       TextColor="Black"
                                                       LineBreakMode="WordWrap"/>
                                            </Border>

                                            <!-- Usuario -->
                                            <Label Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                                                   Text="{Binding Usuario_Display}"
                                                   FontSize="12"
                                                   TextColor="#6c757d"
                                                   FontAttributes="Italic"
                                                   Margin="0,5,0,0"/>

                                            <!-- Botón Eliminar (solo si es del usuario actual) -->
                                            <Button Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                                                    Text="Eliminar Comentario"
                                                    BackgroundColor="#dc3545"
                                                    TextColor="White"
                                                    CornerRadius="8"
                                                    FontSize="12"
                                                    Padding="10,5"
                                                    Margin="0,10,0,0"
                                                    Clicked="Eliminar_Comentario_Clicked"
                                                    CommandParameter="{Binding Id_Comentario}"
                                                    IsVisible="{Binding Puede_Eliminar}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>
        </ScrollView>
    </components:Background_Image>
</ContentPage>
